<h2 class="table_pos">スケジュール編集画面</h2>

<% if flash[:success] %>
  <p class="notice bk_color1"><%= flash[:success] %></p>
<% elsif flash[:failure] %>
  <p class="notice bk_color2"><%= flash[:failure] %></p>
<% else %>
<% end %>

<%= render "shared/error", obj: @schedule %>

<%= form_with model:@schedule, url:lesson_path do |f| %>
  <table class="table_pos">
    <tr>
      <td class="new_table_td1"><%= f.label :title ,"タイトル" %></td>
      <td class="new_table_td2"><%= f.text_field :title ,:size=>"60" %></td>
    </tr>
    
    <tr>
      <td class="new_table_td1"><%= f.label :start_day ,"開始日" %></td>
      <td class="new_table_td2"><%= f.date_field(:start_day, :size=>"230") %></td>
    </tr>
    
    <tr>
      <td class="new_table_td1"><%= f.label :end_day ,"終了日" %></td>
      <td class="new_table_td2"><%= f.date_field :end_day %></td>
    </tr>
    
    <tr>
      <td class="new_table_td1"><%= f.label :all_day ,"終日" %></td>
      <td class="new_table_td2"><%= f.check_box :all_day %>&nbsp;終日の場合はチェックを入れます。</td>
    </tr>
    
    <tr>
      <td class="new_table_td1"><%= f.label :memo ,"スケジュールメモ" %></td>
      <td class="new_table_td2"><%= f.text_area :memo ,:size=>"60x10" %></td>
    </tr>
  </table>
  <div class="table_pos"><%= f.submit "更新する" %></div>
<% end%>

<div class="table_pos">
  <%= link_to "スケジュール一覧に戻る", :lessons %>
</div>

<%= render "shared/footer1" %>
